pipeline {
   agent { label 'kopserver'
}
    parameters {
                 booleanParam(defaultValue: false, description: '', name: 'collection')
                 booleanParam(defaultValue: false, description: '', name: 'collection1')
            }
   stages {
      stage('git checkout') {
         steps {
            git 'https://github.com/shaikshareefmastan/apipro.git'
         }
       }
      stage('parallel build'){
           parallel {
      	stage('Build collection') {
            when {
                         expression { params.collection }
                     }
         steps {
	            sh "kubectl cp collection.json api-deployment-57f88867b-9mcn9:/etc/newman "
                    sh "kubectl exec api-deployment-57f88867b-9mcn9 -- newman run collection.json -r htmlextra --reporter-htmlextra-export /var/www/html/collection.html"
                    sh "echo http://a51a9649e899f40fa8db04956289b8b0-138606564.ap-south-1.elb.amazonaws.com/collection.html"
                 }
               }
      stage('Build collection1'){
                  when { 
                                  expression { params.collection1 }
                             }
           steps {
                     
                    sh "kubectl cp collection1.json api-deployment-57f88867b-tdqw4:/etc/newman "
                    sh "kubectl exec api-deployment-57f88867b-tdqw4 -- newman run collection1.json -r htmlextra --reporter-htmlextra-export /var/www/html/collection1.html"
                    sh "echo http://a51a9649e899f40fa8db04956289b8b0-138606564.ap-south-1.elb.amazonaws.com/collection1.html"
               }
         }
       }
     }
   }
}
