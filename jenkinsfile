pipeline {
   agent any
   stages {
      stage('git checkout') {
         steps {
            git 'https://github.com/shaikshareefmastan/apipro.git'
         }
       }
      stage('Build application') {
         steps {
		withDockerContainer(image: "postman/newman:alpine"){
           script{
                dir('/var/lib/jenkins/workspace/apipro_pipeline'){

                       sh "newman run collection.json"     
			
                    }
               	}		
            }

         }
      }
   }
}
